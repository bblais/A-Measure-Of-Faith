%
% diagonal matrix:
%      \diagmat{A}{B}  -->   ( A     0 )
%                            (   ...   )
%                            ( 0     B )
\newcommand{\diagmat}[2]{\left(\begin{array}{ccc}
#1 & & \mbox{\LARGE \bf 0} \\
 &\ddots &  \\
\mbox{\LARGE \bf 0} & &#2
\end{array}\right)}
%
% two by two  matrix:
%      \ttmat{a}{b}{c}{d}  -->   ( a b )
%                                ( c d )
\newcommand{\ttmat}[4]{\left(\begin{array}{cc}
#1 & #2 \\ #3 & #4
\end{array}\right)}




